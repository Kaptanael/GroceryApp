@model GroceryApp.ViewModels.TransactionForSellViewModel

@{
    ViewData["Title"] = "Add Edit Sale";
}

@if (TempData["Message"] != null && TempData["Message"].ToString().Length > 0)
{
    <div class="row" id="successMessageDiv">
        <div class="col-md-6 offset-md-3">
            <div class="alert alert-@TempData["Status"].ToString() alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong id="message">@TempData["Message"].ToString()</strong>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-6 offset-md-3 mt-3">
        <div class="card">
            <div class="card-header">Sale</div>
            <div class="card-body primary">
                <form asp-action="AddEditSell">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CustomerTransactionId" />
                    <div class="form-group">
                        <label asp-for="SoldAmount" class="control-label"></label>
                        <input asp-for="SoldAmount" class="form-control" autofocus />
                        <span asp-validation-for="SoldAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TransactionDate" class="control-label"></label>
                        <input asp-for="TransactionDate" class="form-control" />
                        <span asp-validation-for="TransactionDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerId" class="control-label"></label>
                        <select asp-for="CustomerId" asp-items="@Model.CustomerSelectList" class="form-control">
                            <option value="">----Select----</option>
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <input type="reset" id="clear" value="Clear" class="btn btn-dark">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/addedit-sell.js"></script>
}




